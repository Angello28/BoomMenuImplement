<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gambar"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
            <Button
                android:id="@+id/load"
                android:layout_height="wrap_content"
                android:text="Import"
                android:layout_margin="15dp"
                android:layout_width="150dp"
                android:onClick="ambilGambar"
                android:layout_below="@+id/gambar"/>

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                app:bmb_normalColor="@color/purple_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bmb_buttonEnum="simpleCircle"
                app:bmb_piecePlaceEnum="piecePlace_share"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_5_1"
                app:bmb_shareLine1Color="@android:color/white"
                app:bmb_shareLine2Color="@android:color/white"
                app:bmb_buttonPlaceAlignmentEnum="buttonPlaceAlignment_bottom"
                app:bmb_buttonBottomMargin="90dp"
            />
    </LinearLayout>
</LinearLayout>